generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// ENUMS
//
enum Role {
  ADMIN
  USER
  BUYER
  SOLVER
}

enum ProjectStatus {
  OPEN
  ASSIGNED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum RequestStatus {
  PENDING
  ACCEPTED
  REJECTED
  WITHDRAWN
}

enum TaskStatus {
  IN_PROGRESS
  SUBMITTED
  COMPLETED
  REJECTED
}

enum SubmissionStatus {
  SUBMITTED
  ACCEPTED
  REJECTED
}

enum ActivityAction {
  PROJECT_CREATED
  SOLVER_REQUESTED
  SOLVER_ASSIGNED
  TASK_CREATED
  TASK_UPDATED
  SUBMISSION_UPLOADED
  SUBMISSION_ACCEPTED
  SUBMISSION_REJECTED
  PROJECT_COMPLETED
}

//
// AUTH / USERS
//
model User {
  id           String  @id @default(cuid())
  email        String  @unique
  passwordHash String
  name         String?
  role         Role    @default(SOLVER) // Default to SOLVER as per requirements

  isVerified Boolean @default(false) // Set to true by admin when approved as buyer

  // OTP for password reset
  otp       String?
  otpExpiry DateTime?

  avatarUrl String? // Supabase URL for user profile image

  solverProfile SolverProfile?
  buyerProfile  BuyerProfile?

  // Relations to Marketplace Projects
  buyerProjects    Project[]     @relation("BuyerProjects")
  assignedProjects Project[]     @relation("AssignedSolverProjects")
  tasks            Task[]
  workRequests     WorkRequest[]
  submissions      Submission[]     @relation("SolverSubmissions")
  
  // Relation to Personal Projects
  personalProjects PersonalProject[]
  education        Education[]
  experience       Experience[]

  activityLogs     ActivityLog[]
  reviews          Submission[]     @relation("BuyerReviews")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//
// BUYER PROFILE (simplified)
//
model BuyerProfile {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  companyName String?
  bio         String?
  location    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//
// SOLVER PROFILE (with additional fields for personal projects, education, and experience)
//
model SolverProfile {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  bio        String?
  skills     String[]
  experience String? // Years of experience or description
  portfolio  String? // URL

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//
// PERSONAL PROJECTS (Solver's portfolio items)
//
model PersonalProject {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  projectUrl  String?
  imageUrl    String // Required per requirement
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Education {
  id        String   @id @default(cuid())
  userId    String
  school    String
  degree    String
  startYear String?
  endYear   String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Experience {
  id        String   @id @default(cuid())
  userId    String
  company   String
  role      String
  startDate String? // ISO date or year
  endDate   String? // ISO date or year or "Present"
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//
// MARKETPLACE PROJECTS
//
model Project {
  id             String        @id @default(cuid())
  title          String
  description    String
  skillsRequired String[] // Changed from skills to skillsRequired
  budget         Float?
  deadline       DateTime?
  status         ProjectStatus @default(OPEN)

  coverImageUrl  String?
  coverImageName String?

  buyerId String
  buyer   User   @relation("BuyerProjects", fields: [buyerId], references: [id])

  assignedSolverId String?
  assignedSolver   User?   @relation("AssignedSolverProjects", fields: [assignedSolverId], references: [id])

  requests WorkRequest[]
  tasks    Task[]
  activityLogs ActivityLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([buyerId])
  @@index([status])
}

//
// WORK REQUEST MODEL (for buyers to view solver requests)
//
model WorkRequest {
  id        String     @id @default(cuid())
  projectId String
  solverId  String
  status    RequestStatus @default(PENDING)
  message   String?

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  solver  User    @relation(fields: [solverId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([projectId, solverId])
}

//
// ACTIVITY LOG MODEL
//
model ActivityLog {
  id           String         @id @default(cuid())
  action       ActivityAction
  actorId      String
  projectId    String?
  taskId       String?
  submissionId String?
  message      String
  metadata     Json?

  actor        User           @relation(fields: [actorId], references: [id], onDelete: Cascade)
  project      Project?       @relation(fields: [projectId], references: [id], onDelete: SetNull)
  task         Task?          @relation(fields: [taskId], references: [id], onDelete: SetNull)
  submission   Submission?    @relation(fields: [submissionId], references: [id], onDelete: SetNull)

  createdAt    DateTime       @default(now())

  @@index([projectId, createdAt])
  @@index([actorId, createdAt])
}

//
// TASK MODEL (for problem solvers to work on a project)
//
model Task {
  id          String     @id @default(cuid())
  projectId   String
  solverId    String // must equal project.assignedSolverId (enforce in service)
  title       String
  description String
  deadline    DateTime?
  status      TaskStatus @default(IN_PROGRESS)

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  solver  User    @relation(fields: [solverId], references: [id], onDelete: Cascade)

  submissions Submission[]
  subtasks    TaskSubItem[]
  activityLogs ActivityLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId, status])
  @@index([solverId, status])
}

//
// TASK SUBITEM MODEL (Subtasks)
//
model TaskSubItem {
  id        String   @id @default(cuid())
  taskId    String
  title     String
  isDone    Boolean  @default(false)
  order     Int      @default(0)

  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([taskId])
}

//
// SUBMISSION MODEL (TaskSubmission)
//
model Submission {
  id        String           @id @default(cuid())
  taskId    String
  solverId  String
  buyerId   String?          // Nullable until reviewed (or populated if known, but prompt says nullable until reviewed is OK logic or just buyer of project)
                               // Prompt: "buyerId (FK User, nullable until reviewed)"
  fileUrl   String
  fileName  String?
  fileSize  Int?
  status    SubmissionStatus @default(SUBMITTED)
  reviewComments String?

  submittedAt DateTime @default(now())
  reviewedAt  DateTime?

  task      Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  solver    User   @relation("SolverSubmissions", fields: [solverId], references: [id], onDelete: Cascade)
  buyer     User?  @relation("BuyerReviews", fields: [buyerId], references: [id]) // Add relation
  activityLogs ActivityLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([taskId])
  @@index([solverId])
  @@index([status])
}
